{
  "name": "@trustproof/sdk",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "trustproof": "dist/cli.js"
  },
  "scripts": {
    "lint": "biome lint .",
    "test": "vitest run",
    "build": "tsup src/index.ts src/cli.ts --format esm,cjs --dts",
    "example:langchain": "node ../../examples/integrations/langchain/tool_call_proof.mjs",
    "example:openai-agents": "node ../../examples/integrations/openai_agents/on_action_proof_chain.mjs"
  },
  "dependencies": {
    "@langchain/core": "^1.1.28",
    "ajv": "^8.17.1",
    "jose": "^5.9.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.16.5",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}
